#:import strings gui.strings
<SideMenuButton@Button>:
    on_press: app.buttonPressed(strings.mainmenu,self.tag)
<CreateButton@SideMenuButton>:
    tag: strings.create
    text: _("Create")
<MaintainButton@SideMenuButton>:
    tag: strings.maintain
    text: _("Maintain")
<PlayButton@SideMenuButton>:
    tag: strings.play
    text: _("Play")
<GMButton@SideMenuButton>:
    tag: strings.gamemaster
    text: _("GameMaster")
<ToolsButton@SideMenuButton>:
    tag: strings.tools
    text: _("Tools")
<AboutButton@SideMenuButton>:
    tag: strings.about
    text: _("About")
<SideMenu@BoxLayout>:
    BoxLayout:
        orientation: "vertical"
        CreateButton:
        MaintainButton:
        PlayButton:
        GMButton:
        ToolsButton:
        AboutButton:

<MainMenu>:
    BoxLayout:
        pos: root.pos
        size: root.size
        SideMenu:
            size_hint: 0.3,1
        Image:
            size_hint: 0.7,1
            source: "img/logo.png"
