#:import strings util.strings
<MainMenuSideMenuButton@Button>:
    on_press: app.buttonPressed(strings.mainmenu,self.tag)
<MainMenuCreateButton@MainMenuSideMenuButton>:
    tag: strings.create
    text: _("Create")
<MainMenuMaintainButton@MainMenuSideMenuButton>:
    tag: strings.maintain
    text: _("Maintain")
<MainMenuPlayButton@MainMenuSideMenuButton>:
    tag: strings.play
    text: _("Play")
<MainMenuGMButton@MainMenuSideMenuButton>:
    tag: strings.gamemaster
    text: _("GameMaster")
<MainMenuToolsButton@MainMenuSideMenuButton>:
    tag: strings.tools
    text: _("Tools")
<MainMenuAboutButton@MainMenuSideMenuButton>:
    tag: strings.about
    text: _("About")
<MainMenuSideMenu@BoxLayout>:
    BoxLayout:
        orientation: "vertical"
        MainMenuCreateButton:
        MainMenuMaintainButton:
        MainMenuPlayButton:
        MainMenuGMButton:
        MainMenuToolsButton:
        MainMenuAboutButton:

<MainMenu>:
    BoxLayout:
        pos: root.pos
        size: root.size
        orientation: "horizontal"
        MainMenuSideMenu:
            size_hint: 0.3,1
        Image:
            size_hint: 0.7,1
            source: "img/logo.png"
