#:import mainmenu gui.strings.mainmenu
<SideMenuButton@Button>:
    on_press: app.buttonPressed(mainmenu.mainmenu,self.tag)
<CreateButton@SideMenuButton>:
    tag: mainmenu.create
    text: _("Create")
<MaintainButton@SideMenuButton>:
    tag: mainmenu.maintain
    text: _("Maintain")
<PlayButton@SideMenuButton>:
    tag: mainmenu.play
    text: _("Play")
<GMButton@SideMenuButton>:
    tag: mainmenu.gamemaster
    text: _("GameMaster")
<ToolsButton@SideMenuButton>:
    tag: mainmenu.tools
    text: _("Tools")
<AboutButton@SideMenuButton>:
    tag: mainmenu.about
    text: _("About")
<SideMenu@BoxLayout>:
    BoxLayout:
        orientation: "vertical"
        CreateButton:
        MaintainButton:
        PlayButton:
        GMButton:
        ToolsButton:
        AboutButton:

<Desktop>:
    BoxLayout:
        pos: root.pos
        size: root.size
        SideMenu:
            size_hint: 0.3,1
        Image:
            size_hint: 0.7,1
            source: "img/logo.png"

<Mobile>:
    SideMenu:
        pos: root.pos
        size: root.size
