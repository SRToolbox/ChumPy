#:import strings util.strings
<AboutMenuButton@Button>:
    on_press: app.buttonPressed(strings.about,self.tag)
<AboutBackButton@AboutMenuButton>:
    tag: strings.back
    text: _("Back")
<AboutChangeLanguageButton@Button>:
    on_press: app.buttonPressed(strings.about,self.tag,self.language)
    tag: strings.changelanguage
    text: _("ChangeLanguage")

<AboutTopMenu@BoxLayout>:
    BoxLayout:
        orientation: "horizontal"
        AboutBackButton:
            size_hint: 0.1,1
        Label:
            size_hint: 0.9,1
            halign: "center"
            text: _("About")

<AboutMainMenu@BoxLayout>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint: 1,0.1
            orientation: "horizontal"
            Spinner:
                id: spinner
                halign: "center"
                tag: strings.language
                text: app.LanguageManager.Current
                values: {strings.german,strings.english}
            AboutChangeLanguageButton:
                language: spinner.text
        Image:
<About>:
    BoxLayout:
        pos: root.pos
        size: root.size
        orientation: "vertical"
        AboutTopMenu:
            size_hint: 1,0.1
        AboutMainMenu:
            size_hint: 1,0.9
            source: "img/logo.png"
